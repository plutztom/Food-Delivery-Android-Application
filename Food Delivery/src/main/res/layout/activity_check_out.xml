<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.soxluvr23.afinal.CheckOut">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:context="com.transitiontose.schmidttandroidlist.DetailsActivity"
        android:background="?android:attr/listChoiceBackgroundIndicator">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_margin="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:cropToPadding="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/Restaurant"
                    android:layout_weight="1"
                    android:textSize="25sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliveryCharge"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView4"
            android:scaleType="fitCenter"
            android:layout_height="3dp" />

        <TextView
            android:text="Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Name: "
                android:layout_height="30dp"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:padding="0dp"
                android:layout_width="150dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:layout_height="30dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:selectAllOnFocus="true"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Address: "
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/textView15"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/address"
                android:textColor="@android:color/background_dark"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Phone: "
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/textView16"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:background="@android:color/transparent"
                android:maxLength="19"
                android:layout_width="363dp"
                android:ems="10"
                android:id="@+id/editText5"
                android:textSize="14sp"
                android:padding="0dp"
                android:layout_height="30dp"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:inputType="phone" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView5"
            android:layout_height="3dp" />

        <TextView
            android:text="Credit Card:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp" />

        <EditText
            android:background="@android:color/transparent"
            android:maxLength="19"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/editText4"
            android:textSize="12sp"
            android:inputType="phone" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView3"
            android:layout_height="3dp" />

        <TextView
            android:text="Order Details:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:text="OrderDisplay"
            android:layout_width="match_parent"
            android:id="@+id/OrderDisplay"
            android:layout_weight="0.84"
            android:layout_height="150dp"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView6"
            android:layout_height="3dp" />

        <TextView
            android:text="Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <Button
            android:text="Place Order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

    </LinearLayout>

</RelativeLayout>
